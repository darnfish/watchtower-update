{
  "name": "watchtower-action",
  "version": "0.0.0",
  "private": true,
  "description": "Automate your Docker image deployments on GitHub Actions via Watchtower's HTTP API",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "yarn build; yarn format; yarn lint; yarn package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darnfish/watchtower-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.5.1",
    "qs": "^6.11.2"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/parser": "^5.59.2",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-prettier": "^5.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
